/* contact.wxss */
.title{
 
  height: 65rpx;
  line-height: 65rpx;
  background: white;
  border-left: 5px solid #2d7dee;
  font-size: 14px;
  /* padding: 7px 0px 0px 10px; */
  border-bottom:1px solid #f3f3f3;
  text-indent: 10px;
  margin-top: 10px;
}
.contact_img{
  width:100%;
  height: 160px;
}
.contact_text{
  font-size:13px;
  color: #555;
  border-bottom:1px solid #eee;
  height: 82rpx;
  line-height: 82rpx;
  padding-left:15rpx;
  position: relative
}
.contact_text .ri{
  margin-left:20rpx;
  position: absolute;
  right: 15px;
  top:0px;
}
.contact_text .le{
  position: absolute;
  margin-left:10rpx;
  
}

.contact_text image{
  width: 40rpx;
  height: 40rpx;
  margin-top:8px;
}

.cardBackground{
  background-color:#f3f6ff;
}

.card1{
  width: 90%;
  margin-left: 10%;
  height: 140rpx;
 }
 .card1 button{
   position: absolute;
   top:25rpx;
   left: 230rpx;
   background: none;
   /* border: 1px solid #eee; */
   content: none;
   
 }
 button{
   color: #666;
 }
 button::after{
   border: 0;
   color: #777;
 }
             
.card2{
  padding: 10px 10px 0px 10px;
  float: left;
}


.first{
  margin-top: 10rpx;
}

.userinfo-avatar {
  width: 95rpx;
  height: 95rpx;
  border:1px solid #eee;
  border-radius: 50%;
}

.contact_name{
  text-align: left;
  line-height: 140rpx;
  color: #666;
  font-size: 14px;
}

.contact_customer{
  width: 95%;
  margin: 0 auto;
  margin-top: 36rpx;
}
.contact_button{
  color:#fff;
}